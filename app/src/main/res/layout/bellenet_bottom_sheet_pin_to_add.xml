<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background = "@drawable/bellenet_bottom_sheet_background"
    android:paddingBottom="32dp"
    android:id="@+id/bottom_sheet_challenges"

    app:behavior_hideable="true"
    app:behavior_peekHeight="16dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_profile_image"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/default_profile_pic"
        android:background="@drawable/event_id_card_circle_background"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/teal_200"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"


        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_name"
        android:text="Alireza Alikhani"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/gray_800"
        app:layout_constraintTop_toTopOf="@id/user_profile_image"
        app:layout_constraintBottom_toBottomOf="@id/user_profile_image"
        app:layout_constraintLeft_toRightOf="@+id/user_profile_image"
        android:layout_marginStart="16dp"
        />

    <ImageView
        android:id="@+id/marker_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/user_profile_image"
        app:layout_constraintLeft_toLeftOf="@id/user_profile_image"
        app:layout_constraintRight_toRightOf="@id/user_profile_image"
        android:layout_marginTop="16dp"
        android:src="@drawable/map_marker_outline"
        app:tint="@color/gray_800"
        />

    <TextView
        android:id="@+id/marker_explanation_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="@string/hint_user_to_mark_spots_on_map"
        android:textColor="@color/gray_600"
        app:layout_constraintTop_toTopOf="@id/marker_icon"
        app:layout_constraintLeft_toRightOf="@id/marker_icon"
        android:layout_marginStart="16dp"
        />

    <TextView
        android:id="@+id/tap_to_add_marker_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="@string/hint_user_to_tap_on_add_icon"
        app:layout_constraintTop_toBottomOf="@+id/marker_explanation_text"
        app:layout_constraintLeft_toRightOf="@id/marker_icon"
        android:layout_marginStart="16dp"
        />

    <ImageButton
        android:id="@+id/add_marker_ib"
        android:layout_width="42dp"
        android:layout_height="42dp"
        app:layout_constraintTop_toTopOf="@id/marker_icon"
        app:layout_constraintBottom_toBottomOf="@id/marker_icon"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="24dp"
        android:src="@drawable/plus"
        app:tint="@color/white"
        android:background="@drawable/ib_circle_background"
        />



    <ImageView
        android:id="@+id/date_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tap_to_add_marker_text"
        app:layout_constraintLeft_toLeftOf="@id/user_profile_image"
        app:layout_constraintRight_toRightOf="@id/user_profile_image"
        android:layout_marginTop="@dimen/mapbox_dimen_16dp"
        android:src="@drawable/calendar"
        app:tint="@color/gray_800"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/input_date_tv"
        android:hint="Click to Choose the Date"
        android:textSize="16sp"
        android:inputType="date"
        app:layout_constraintTop_toTopOf="@id/date_icon"
        app:layout_constraintBottom_toBottomOf="@id/date_icon"
        app:layout_constraintLeft_toRightOf="@id/date_icon"
        android:layout_marginStart="16dp"
        />

    <ImageView
        android:id="@+id/clock_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/date_icon"
        app:layout_constraintLeft_toLeftOf="@id/user_profile_image"
        app:layout_constraintRight_toRightOf="@id/user_profile_image"
        android:layout_marginTop="@dimen/mapbox_dimen_16dp"
        android:src="@drawable/clock_outline"
        app:tint="@color/gray_800"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/input_time_tv"
        android:hint="Click to Choose the Time"
        android:textSize="16sp"
        android:inputType="date"
        app:layout_constraintTop_toTopOf="@id/clock_icon"
        app:layout_constraintBottom_toBottomOf="@id/clock_icon"
        app:layout_constraintLeft_toRightOf="@id/clock_icon"
        android:layout_marginStart="16dp"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/save_challenge"
        android:text="Save"
        android:background="@drawable/button_rounded_corners"
        app:layout_constraintTop_toBottomOf="@id/clock_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="36dp"
        android:layout_marginStart="24dp"
        app:backgroundTint="@color/save_button"
        android:shadowColor="@color/teal_200"
        android:textColor="@color/gray_100"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cancel_challenge"
        android:text="cancel"
        android:background="@drawable/button_rounded_corners"
        app:layout_constraintTop_toBottomOf="@id/clock_icon"
        app:layout_constraintLeft_toRightOf="@id/save_challenge"
        android:layout_marginTop="36dp"
        android:layout_marginStart="24dp"
        app:backgroundTint="@color/cancel_button"
        android:textColor="@color/gray_100"
        />






</androidx.constraintlayout.widget.ConstraintLayout>