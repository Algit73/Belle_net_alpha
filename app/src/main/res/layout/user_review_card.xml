<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:id="@+id/user_review_card">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_profile_image_civ"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:src="@drawable/al_profile_300"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"/>

            <TextView
                android:id="@+id/user_name_family_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/user_profile_image_civ"
                app:layout_constraintBottom_toBottomOf="@id/user_profile_image_civ"
                app:layout_constraintLeft_toRightOf="@id/user_profile_image_civ"
                android:layout_marginStart="24dp"
                android:textSize="18sp"
                android:textColor="@color/gray_800"
                android:text="ALireza ALikhani"/>

            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                android:id="@+id/rating1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialRatingBar.RatingBar.Indicator.Small"
                app:layout_constraintLeft_toLeftOf="@id/user_profile_image_civ"
                app:layout_constraintTop_toBottomOf="@id/user_profile_image_civ"
                android:layout_marginTop="16dp"
                android:minHeight="18dp"
                android:minWidth="18dp"
                android:stepSize=".01"
                />

            <TextView
                android:id="@+id/added_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:layout_constraintBottom_toBottomOf="@id/rating1"
                app:layout_constraintLeft_toRightOf="@id/rating1"
                android:layout_marginStart="16dp"
                android:textSize="14sp"
                android:textColor="@color/gray_600"
                android:text="May, 19"/>

            <TextView
                android:id="@+id/user_comment_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/rating1"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="16dp"
                android:textSize="16sp"
                android:textColor="@color/gray_800"
                android:text="A wonderful place and a great ride. I'm really glad to join it"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>


</LinearLayout>
